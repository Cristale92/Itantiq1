
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "*.js"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
